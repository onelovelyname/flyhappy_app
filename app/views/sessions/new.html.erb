<div class="container">
	<h1>Sign in</h1>
	<%= form_for(:session, url: sessions_path, :html=>{:class => 'pure-form pure-form-aligned'}) do |f| %>

		<fieldset>
			<div class="pure-control-group">
				<%= f.label :email %>
			    <%= f.text_field :email %>
			</div>

			<div class="pure-control-group">
			    <%= f.label :password %>
			    <%= f.password_field :password %>
			</div>
		</fieldset>
	    
	    <div class="submit-button">
	      <%= f.submit "Sign in", class: "pure-button pure-button-primary" %>
	    </div>
	    <% end %>
	    <div>
		    <p>If you don't have an account: </p>
		    <button class="pure-button pure-button-primary" data-toggle="modal" data-target="#myModal">
	  			Sign Up Now!
			</button>
			<%= render 'shared/signup_form' %>
		</div>

   </div>